{
  "name": "orion-archi",
  "version": "0.1.0",
  "description": "Production readiness CLI - analyze any codebase for security, testing, CI/CD, and more",
  "author": "Orion <hello@orion.archi>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/orion-archi/orion.git"
  },
  "homepage": "https://orion.archi",
  "keywords": [
    "production",
    "readiness",
    "analysis",
    "security",
    "testing",
    "ci",
    "cd",
    "devops",
    "code-quality",
    "cli"
  ],
  "private": false,
  "bin": {
    "orion": "./cli/dist/index.js"
  },
  "files": [
    "cli/dist"
  ],
  "scripts": {
    "cli:build": "npx esbuild cli/index.ts --bundle --platform=node --target=node18 --outfile=cli/dist/index.js --banner:js='#!/usr/bin/env node'",
    "prepublishOnly": "npm run cli:build",
    "dev": "next dev --turbopack",
    "build": "prisma generate && next build",
    "start": "next start",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "typecheck": "tsc --noEmit",
    "postinstall": "prisma generate",
    "prepare": "husky"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.62.0",
    "@auth/prisma-adapter": "^2.11.1",
    "@prisma/client": "^6.16.1",
    "@react-pdf/renderer": "^4.3.0",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "@stripe/stripe-js": "^7.9.0",
    "@tsparticles/engine": "^3.9.1",
    "@tsparticles/react": "^3.0.0",
    "@tsparticles/slim": "^3.9.1",
    "axios": "^1.12.1",
    "clsx": "^2.1.1",
    "e2b": "^1.0.0",
    "framer-motion": "^12.23.12",
    "gsap": "^3.14.2",
    "lottie-react": "^2.4.1",
    "lucide-react": "^0.544.0",
    "next": "^16.1.1",
    "next-auth": "^5.0.0-beta.30",
    "prisma": "^6.16.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "stripe": "^18.5.0",
    "tailwind-merge": "^3.3.1",
    "three": "^0.182.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/three": "^0.182.0",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.21",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5",
    "vitest": "^4.0.16"
  }
}
